# SAP Connection Settings
SAP_HOST=sap.example.com
SAP_CLIENT=100
SAP_USERNAME=sap_user
SAP_PASSWORD=your_sap_password
SAP_GATEWAY_URL=https://sap.example.com:44300/sap/opu/odata/sap

# Database Settings
DB_HOST=postgres
DB_NAME=sap_data_quality
DB_USER=sap_user
DB_PASSWORD=your_db_password

# Security Keys (change in production)
SECRET_KEY=your-secret-key-here-change-in-production
AIRFLOW__CORE__FERNET_KEY=your-fernet-key-here-change-in-production
AIRFLOW__WEBSERVER__SECRET_KEY=your-secret-key-here-change-in-production

# Grafana Settings
GRAFANA_PASSWORD=admin

# pgAdmin Settings
PGADMIN_EMAIL=admin@sap-data-quality.com
PGADMIN_PASSWORD=admin

# Logging Level
LOG_LEVEL=INFO

# Data Quality Settings
DATA_QUALITY_THRESHOLD=0.95
VALIDATION_TIMEOUT=300

# Optional: Alerting Settings
ALERT_EMAIL=admin@company.com
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Optional: RFC Settings (for direct SAP calls)
SAP_RFC_DESTINATION=YOUR_RFC_DEST
SAP_ASHOST=sap.example.com
SAP_SYSNR=00

# Optional: Certificate-based Authentication
SAP_CERT_PATH=/path/to/your/certificate.pem
SAP_KEY_PATH=/path/to/your/private_key.pem
SAP_CERT_PASSWORD=your_cert_password 